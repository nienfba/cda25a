{% extends 'base.html.twig' %}

{% block title %}{{ photo.title }}{% endblock %}

{% block body %}
    <h2>{{ photo.title }}</h2>
    <section class="row">
        <div class="col-6">
            <img src="{{ photo.url }}">
        </div>
        <div class="col-6">
            <h3>Tags :</h3>
            {% for tag in photo.tags %}
                <a href="{{ path('app_display_tag',{slug: tag.slug}) }}">{{ tag.name }}</a>-
            {% endfor %}
            <h3>Desc :</h3>
            {{ photo.description }}
            <form action="{{ path('app_cart_add') }}" method="POST" class="row m-2">
                <div class="col-md-4">
                    <input type="number" name="qty" value="1" class="form-control">
                </div>
                <div class="col-md-8">
                    <input type="hidden" name="id" value="{{ photo.id }}">
                    <button type="submit" class="btn btn-success text-center"> + Ajouter au <i class="icon-shopping-cart"></i></button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
